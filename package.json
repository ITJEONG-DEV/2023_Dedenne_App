{
  "name": "2023-dedenne-app",
  "version": "0.0.1",
  "author": "ITJEONG",
  "scripts": {
    "serve": "vite preview",
    "build": "vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "dev": "vite",
    "electron": "electron .",
    "electron:builder": "electron-builder --win",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:pack": "electron-builder --dir",
    "start": "wait-on tcp:5173 && cross-env IS_DEV=true electron ."
  },
  "main": "electron/electron.js",
  "dependencies": {
    "@mdi/font": "^7.2.96",
    "roboto-fontface": "*",
    "vue": "^3.2.47",
    "vuetify": "npm:@vuetify/nightly@^3.2.0-master-20230214.0",
    "webfontloader": "^1.0.0"
  },
  "devDependencies": {
    "@types/webfontloader": "^1.0.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^23.2.1",
    "electron-builder": "^23.6.0",
    "typescript": "^4.9.3",
    "unplugin-icons": "^0.16.1",
    "vite": "^4.2.0",
    "vite-plugin-vuetify": "^1.0.0-alpha.12",
    "vue-cli-plugin-vuetify": "~2.5.8",
    "vue-tsc": "^1.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "loa.dedenne.app",
    "productName": "DedenneApp",
    "copyright": "Copyright Â© 2023 ${author}",
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "language": 1042
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "images/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "license": "MIT"
}
